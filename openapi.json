{
  "openapi": "3.0.1",
  "info": {
    "title": "e-kot diagramme interactif",
    "version": "0.1.3"
  },
  "servers": [
    {
      "url": "https://aide.e-kot.be"
    }
  ],
  "tags": [
    {
      "name": "diagram",
      "description": "Everything related to diagrams"
    },
    {
      "name": "feedback",
      "description": "Everything related to users feedback"
    }
  ],
  "paths": {
    "/diagrams": {
      "get": {
        "tags": [
          "diagram"
        ],
        "description": "Fetch a preview (first node) of every diagram",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "json": {
                "schema": {
                  "$ref": "#/components/schemas/DiagramPreview"
                }
              }
            }
          }
        }
      }
    },
    "/diagram": {
      "get": {
        "tags": [
          "diagram"
        ],
        "description": "Fetch the requested diagram",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "json": {
                "schema": {
                  "$ref": "#/components/schemas/Diagram"
                }
              }
            }
          }
        }
      }
    },
    "/feedback": {
      "post": {
        "tags": [
          "feedback"
        ],
        "description": "Post",
        "requestBody": {
          "content": {
            "json": {
              "schema": {
                "$ref": "#/components/schemas/Feedback"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request : the given format is incorrect",
            "content": {
              "json": {
                "schema": {
                  "$ref": "#/components/schemas/Info"
                },
                "example": {
                  "message": "json format is required"
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity : missing parameter",
            "content": {
              "json": {
                "schema": {
                  "$ref": "#/components/schemas/Info"
                },
                "example": {
                  "message": "property 'reaction' is missing"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DiagramPreview": {
        "type": "object",
        "properties": {
          "id": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "answers": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Answers"
                }
              }
            }
          }
        }
      },
      "Diagram": {
        "type": "object",
        "properties": {
          "id": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "image": {
                "type": "object",
                "properties": {
                  "caption": {
                    "type": "string"
                  }
                }
              },
              "answers": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Answers"
                }
              }
            }
          }
        }
      },
      "Answers": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "ref": {
            "type": "integer"
          }
        }
      },
      "Info": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "Feedback": {
        "type": "object",
        "required": [
          "reaction"
        ],
        "properties": {
          "reaction": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          }
        }
      }
    }
  }
}